<h1>RAILS_LOG_TO_STDOUT: <%= ENV['RAILS_LOG_TO_STDOUT'] %></h1>
<h1>RAILS_ENV: <%= ENV['RAILS_ENV'] %></h1>
<h1>DATABASE_URL: <%= ENV['DATABASE_URL'] %></h1>
<h1>REMOTE_IP: <%= request.remote_ip %></h1>
<h1>X-Real-IP: <%= request.headers["X-Real-IP"] %></h1>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Job is successed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.res_correct %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
